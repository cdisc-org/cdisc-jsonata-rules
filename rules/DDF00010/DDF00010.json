        "Check": "**.*[id and instanceType and name].$\n    {\n        instanceType: {\n            name: [$.{\"id\": id, \"path\": _path, \"name\": name}]\n        } ~> $sift(function($v,$k){$count($v)>1})\n    }\n    ~> $each(function($v,$k){\n        $v.*.{\n            \"instanceType\":$k,\n            \"id\": id,\n            \"path\": path,\n            \"name\": name\n        }})\n    ~> $reduce($append)",
        "Core": {
            "Id": "",
            "Status": "Draft",
            "Version": "1"
        },
        "Description": "The names of all instances of the same class must be unique.",
        "Executability": "Fully Executable",
        "Outcome": {
            "Message": "The same name has been used for more than one instance of the class.",
            "Output_Variables": [
                "name"
            ]
        },
        "Scope": {
            "Entities": {
                "Include": [
                    "ALL"
                ]
            }
        },
        "Sensitivity": "Record",
        "Rule_Type": "JSONata"
    },
